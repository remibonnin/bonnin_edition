                                    <s:assert test="@type">Les notes doivent être typées dans les transcriptions de ms. ou éditions à nouveaux frais.</s:assert>
                                </s:rule>
                            </constraint>
                        </constraintSpec>
                        <attList>
                            <attDef ident="type" mode="change">
                                <valList mode="change" type="closed">
                                    <valItem ident="palaeographic">
                                        <desc>caractérise une note de nature paléographique</desc>
                                    </valItem>
                                    <valItem ident="linguistic">
                                        <desc>caractérise une note de nature linguistique</desc>
                                    </valItem>
                                    <valItem ident="litterary">
                                        <desc>caractérise une note de nature littéraire</desc>
                                    </valItem>
                                    <valItem ident="tradition">
                                        <desc>caractérise une note de nature philologique</desc>
                                    </valItem>
                                    <valItem ident="glossary">
                                        <desc>caractérise une note relative à l'établissement du glossaire ou au commentaire du sens d'un mot</desc>
                                    </valItem>
                                 </valList>
                            </attDef>
                            <attDef ident="anchored" mode="delete"/>
                             <attDef ident="targetEnd" mode="delete"/>
                        </attList>
                    </elementSpec>
                    <elementSpec ident="p" mode="change">
                    </elementSpec>
                    <elementSpec ident="hi" mode="change">
                         <constraintSpec scheme="schematron" ident="rend-obligatoire-transcriptions">
                            <constraint>
                                <s:assert test="not(/tei:TEI[@type='ms']) or (/tei:TEI[@type='ms'] and not(//tei:hi[not(@rend)]) )">l'attribut @rend est obligatoire pour l'élément hi dans les transcriptions de manuscrit</s:assert>
                            </constraint>
                        </constraintSpec>
                        <attList>
                            <attDef ident="rend" mode="change" usage="rec">
                                <valList mode="add" type="closed">
                     <valItem ident="superscript">
                                        <desc>spécifie que le contenu est suscrit, lorsqu'aucun élément plus spécifique ne peut être utilisé.</desc>
                                    </valItem>
                                      <valItem ident="initiale">
                                        <desc>décrit une initiale de tout type</desc>
                                    </valItem>
                                    <valItem ident="filigr">
                                        <desc>spécifie qu'un élément est filigrané</desc>
                                    </valItem>
                                    <valItem ident="peint">
                                        <desc>spécifie qu'un élément est peint</desc>
                                    </valItem>
                                    <valItem ident="litteraElongata">
                                        <desc>décrit une littera elongata</desc>
                                    </valItem>
                                    <valItem ident="litteraNotabilior">
                                        <desc>décrit une littera notabilior</desc>
                                    </valItem>
                                    <valItem ident="detach">
                                        <desc>précise qu'une initiale est détachée de ce qui suit
                                            par une espace</desc>
                                    </valItem>
                                    <valItem ident="2l">
                                        <desc>spécifie qu'une initiale occupe 2 l. de réglure</desc>
                                    </valItem>
                                    <valItem ident="4l">
                                        <desc>spécifie qu'une initiale occupe 4 l. de réglure</desc>
                                    </valItem>
                                    <valItem ident="5l">
