                            </attDef>
                        </attList>
                        <exemplum><!-- VM Ajouter un exemple du Manuscrit Roi -->
                            <egXML xmlns="http://www.tei-c.org/ns/Examples">
                                <!-- Le mot débute par une initiale détachée -->
                                <w><hi rend="initiale detach"
                                    >c</hi><choice><reg>i</reg><orig>ı</orig></choice><choice><reg>s</reg><orig>ſ</orig></choice></w>
                                <!-- Le mot débute par une initiale filigranée de deux lignes de réglure -->
                                <w><hi rend="initiale filigr 2l"
                                    ><choice><reg>d</reg><orig>D</orig></choice></hi>en</w>
                                <!-- Le mot débute par une initiale peinte de 4 lignes de réglute -->
                                <w><hi rend="initiale peint 4l"
                                    >L</hi><choice><reg>i</reg><orig>ı</orig></choice></w>
                            </egXML>
                        </exemplum>
                    </elementSpec>
                    <elementSpec ident="quote" mode="change"> </elementSpec>
                    <elementSpec ident="term" mode="change"> </elementSpec>
                    <elementSpec ident="sic" mode="change"> </elementSpec>
                    <elementSpec ident="corr" mode="change">
                        <attList>
                            <!--<attDef ident="cert" mode="delete"/>-->
