                            </constraint>
                        </constraintSpec>
                        <attList>
                            <attDef ident="who" mode="change" usage="req"/>
                        </attList>
                    </elementSpec>
                    <!-- VM Rédaction du schemaSpec pour le module DIV_STRUCT -->
                    <moduleRef key="struct"/>
