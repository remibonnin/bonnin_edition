                            <elementRef key="change" minOccurs="1" maxOccurs="unbounded"/>
                        </content>
                    </elementSpec>
                    <elementSpec ident="change" mode="change">
                        <constraintSpec scheme="schematron" ident="change-when-or-from-to">
